<!-- res/layout/activity_scanned_item_details.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="122dp"
        android:text="Название товара"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="44dp" />

    <TextView
        android:id="@+id/itemLocation"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Местоположение товара"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="190dp" />

    <Button
        android:id="@+id/btnContinueScanning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Продолжить сканирование"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="305dp" />

    <Button
        android:id="@+id/btnCompleteInventory"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:text="Завершить инвентаризацию"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="389dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
