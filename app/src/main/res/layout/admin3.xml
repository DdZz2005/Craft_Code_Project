<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <!-- Custom Toolbar with LinearLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2D7FF"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F2D7FF"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:ignore="DuplicateIds" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Заголовок -->


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="404dp"
        android:layout_height="66dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:text="Назначить инвентаризацию"
        android:textAlignment="center"
        android:textColor="#D54A154B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </RelativeLayout>

    <TextView
        android:id="@+id/spinner_text"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_text_purple"
        android:gravity="center"
        android:text="Выберите сотрудника"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintVertical_bias="0.189" />

    <TextView
        android:id="@+id/spinner_text"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_text_purple"
        android:gravity="center"
        android:text="Выберите инвентарь"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="346dp" />

    <TextView
        android:id="@+id/spinner_text2"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_text_purple"
        android:gravity="center"
        android:text="дд. мм. гггг. чч:мм
"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заявка №1"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="134dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="309dp"
        android:layout_height="36dp"
        android:text="Выберите кабинеты/отделы, в которых необходимо провести инвентаризацию"
        android:textColor="#3e025b"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="257dp"
        android:layout_height="39dp"
        android:text="Выберите сотрудника, которому хотите назначить заявку "
        android:textColor="#3e025b"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="177dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="159dp"
        android:layout_height="36dp"
        android:text="Напишите срок загрузки отчёта"
        android:textColor="#3e025b"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="411dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/img_13"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="525dp"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="21dp"
        android:layout_height="26dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/img_11"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="533dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/img_12"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="536dp"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/transparentButton"
        android:layout_width="298dp"
        android:layout_height="58dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/transparent_button"
        android:text="Назначить инвентаризацию"
        android:textColor="#3E025B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.47"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <Button
        android:id="@+id/button4"
        android:layout_width="296dp"
        android:layout_height="54dp"
        android:backgroundTint="#9ECB2FE5"
        android:text="Готово"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.973" />


</androidx.constraintlayout.widget.ConstraintLayout>